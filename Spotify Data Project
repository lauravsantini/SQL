SELECT track_name, artist_name 
FROM BIT_DB.Spotifydata 
WHERE popularity > 90
GROUP BY artist_name;

SELECT avg(duration_ms)
FROM BIT_DB.Spotifydata
WHERE artist_name = "Olivia Rodrigo";

SELECT track_name, artist_name
FROM BIT_DB.Spotifydata
ORDER BY danceability desc
LIMIT 10;

SELECT COUNT(track_name)
FROM BIT_DB.Spotifydata
WHERE artist_name = "Bad Bunny" AND popularity > 85;

SELECT track_name 
FROM BIT_DB.Spotifydata 
ORDER BY energy ASC
LIMIT 10;

SELECT track_name
FROM BIT_DB.Spotifydata
WHERE loudness < -6.5 and popularity > 90;

SELECT artist_name, track_name
FROM BIT_DB.Spotifydata
ORDER BY liveness desc
LIMIT 1

SELECT track_name 
FROM BIT_DB.Spotifydata
ORDER BY acousticness ASC
LIMIT 10

SELECT artist_name, COUNT(track_name) AS num_tracks
FROM BIT_DB.Spotifydata
GROUP BY artist_name
ORDER BY num_tracks DESC
LIMIT 1

SELECT artist_name
from bit_db.Spotifydata
group by artist_name
order by duration_ms desc
limit 1;

SELECT artist_name, sum(popularity) / count(track_name) as average
FROM BIT_DB.Spotifydata
GROUP BY artist_name
ORDER BY average DESC
LIMIT 1;


WITH popularity_average_CTE AS (
SELECT s.artist_name,
AVG(s.popularity) AS average_popularity
FROM SpotifyData s 
GROUP BY s.artist_name
)
 
SELECT  artist_name,
        average_popularity,
        'Top Star' AS tag
FROM popularity_average_CTE
WHERE average_popularity>=90;
